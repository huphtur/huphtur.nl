{
  "name": "huphtur.nl",
  "description": "Personal blog built with Eleventy and Tailwind CSS.",
  "repository": "https://github.com/huphtur/huphtur.nl",
  "license": "MIT",
  "scripts": {
    "start": "rm -rf _site && eleventy --serve --config=eleventy.config.js & postcss src/tailwind/tailwind.css --o src/_includes/_output.css --watch",
    "build": "rm -rf _site && NODE_ENV=production postcss src/tailwind/tailwind.css --o src/_includes/_output.css && ELEVENTY_ENV=production eleventy --config=eleventy.config.js"
  },
  "browserslist": [
    "> 1%"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.0",
    "eleventy-plugin-embed-everything": "^1.10.0",
    "eleventy-plugin-local-respimg": "^0.4.0",
    "html-minifier": "^4.0.0",
    "postcss": "^8.2.3",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.2"
  }
}
