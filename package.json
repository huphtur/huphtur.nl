{
  "name": "huphtur.nl",
  "description": "Personal blog built with Eleventy and Tailwind.",
  "repository": "https://github.com/huphtur/huphtur.nl",
  "license": "MIT",
  "scripts": {
    "start": "rm -rf _site && eleventy --serve --config=eleventy.config.js & postcss src/css/tailwind.css --o src/css/style.css --watch",
    "build": "rm -rf _site && ELEVENTY_ENV=production eleventy --config=eleventy.config.js && NODE_ENV=production postcss src/css/tailwind.css --o _site/css/style.css"
  },
  "browserslist": [
    "> 1%"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@tailwindcss/typography": "^0.2.0",
    "eleventy-plugin-embed-everything": "^1.9.2",
    "eleventy-plugin-local-respimg": "^0.3.1",
    "html-minifier": "^4.0.0",
    "postcss-cli": "^8.0.0",
    "postcss-csso": "^4.0.0",
    "tailwindcss": "^1.8.10"
  }
}
