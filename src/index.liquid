---
layout: default
pagination:
  data: collections.post
  size: 5
  reverse: true
  alias: posts
---
{% for item in posts %}
  <article>
    <h1><a href="{{ item.url }}">{{ item.data.title }}</a></h1>
    {% if item.data.intro %} {% if item.data.image %}
    <p><a href="{{ item.url }}"><img src="{{ item.data.image }}" alt="{{ item.data.alt }}" /></a></p>
    {% endif %}
    <p>{{ item.data.description }}</p>
    {% else %}
    <p>{{ item.templateContent }}</p>
    {% endif %}
  </article>
{% endfor %}

<small>{% if pagination.href.next %}<a href="{{ pagination.href.next }}">Older posts</a>{% endif %} {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">Newer posts</a>{% endif %}</small>
