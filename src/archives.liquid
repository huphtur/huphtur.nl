---
layout: post
title: "Articles"
---
{% for item in collections.post reversed %}
  {% assign currentdate = item.date | date: "%Y" %}
  {% if currentdate != date %}
    {% unless forloop.first %}</ul>{% endunless %}
    <h2>{{ currentdate }}</h2>
    <ul>
      {% assign date = currentdate %}
    {% endif %} 
        <li><a href="{{ item.url }}">{{ item.data.title }}</a></li>
      {% if forloop.last %}
    </ul>
  {% endif %}
{% endfor %}
